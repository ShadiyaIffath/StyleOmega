<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.DeliveryLocation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lavender"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:id="@+id/checkout_title"
                android:gravity="center"
                android:text="Delivery "
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="36sp"
                app:fontFamily="cursive">

            </TextView>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkout_progress"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:indeterminate="false"
                android:progress="50"
                android:minHeight="50dp"
                android:minWidth="250dp"
                android:max="100"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/thirstle"
            android:orientation="vertical"
            android:layout_margin="30dp"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Recipient Details"
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="24sp"
                app:fontFamily="cursive"/>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
            android:weightSum="2">

                <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:background="@drawable/splashwings"/>

                <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                    android:id="@+id/checkout_receiver"
                android:layout_weight="0.2"
                    android:inputType="text"
                    android:gravity="center"
                    android:hint="Recipient Name"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/logintext"/>
            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
                android:layout_margin="10dp"
                android:weightSum="2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:background="@drawable/address"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:id="@+id/checkout_deliver_to"
                    android:background="@drawable/logintext"
                    android:inputType="textPostalAddress"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:hint="Deliver To"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:weightSum="2">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:background="@drawable/call"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:id="@+id/checkout_cnumber"
                    android:background="@drawable/logintext"
                    android:layout_marginLeft="5dp"
                    android:inputType="phone"
                    android:gravity="center"
                    android:hint="Contact Number"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:weightSum="2">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:background="@drawable/email"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:id="@+id/checkout_email"
                    android:background="@drawable/logintext"
                    android:layout_marginLeft="5dp"
                    android:inputType="textEmailAddress"
                    android:gravity="center"
                    android:hint="E-mail"/>
            </LinearLayout>

                <Button
                    android:id="@+id/checkout_proceed"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="30dp"
                    android:text="Proceed To Payment"
                    android:textColor="@color/cardview_light_background"
                    android:background="@drawable/loginbuttons"/>

                </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>